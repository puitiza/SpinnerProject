<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:weightSum="2"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tipoFiltro"
            style="@style/SubtituloFiltros"
            android:text="Premios"
            android:paddingLeft="50dp"
            android:layout_gravity="center"
            android:layout_weight="1.5"
            android:textSize="40dp" />

        <Button
            android:id="@+id/btn_guardarPremios"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector_btn_guardar"
            android:text="" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:weightSum="2"
        android:orientation="horizontal">
        <TextView android:id="@+id/textPremio1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Premio 1"
            android:layout_weight="1.3"
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:textStyle="bold" />
        <Spinner android:id="@+id/premio_1Spinner"
            android:layout_width="match_parent"
            android:layout_weight="0.7"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">
        <TextView android:id="@+id/textCantidadP1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cantidad"
            android:layout_marginLeft="20dp"
            android:layout_weight="1.3"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/editTextCantidadP1"
            android:layout_width="match_parent"
            android:layout_weight="0.7"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginRight="10dp"
            android:inputType="number"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:weightSum="2"
        android:orientation="horizontal">
        <TextView android:id="@+id/textPremio2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Premio 2"
            android:layout_weight="1.3"
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:textStyle="bold" />
        <Spinner android:id="@+id/premio_2Spinner"
            android:layout_width="match_parent"
            android:layout_weight="0.7"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">
        <TextView android:id="@+id/textCantidadP2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cantidad"
            android:layout_marginLeft="20dp"
            android:layout_weight="1.3"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/editTextCantidadP2"
            android:layout_width="match_parent"
            android:layout_weight="0.7"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginRight="10dp"
            android:inputType="number"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:weightSum="2"
        android:orientation="horizontal">
        <TextView android:id="@+id/textPremio3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Premio 3"
            android:layout_weight="1.3"
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:textStyle="bold" />
        <Spinner android:id="@+id/premio_3Spinner"
            android:layout_width="match_parent"
            android:layout_weight="0.7"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">
        <TextView android:id="@+id/textCantidadP3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cantidad"
            android:layout_marginLeft="20dp"
            android:layout_weight="1.3"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/editTextCantidadP3"
            android:layout_width="match_parent"
            android:layout_weight="0.7"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginRight="10dp"
            android:inputType="number"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:weightSum="2"
        android:orientation="horizontal">
        <TextView android:id="@+id/textPremio4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Premio 4"
            android:layout_weight="1.3"
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:textStyle="bold" />
        <Spinner android:id="@+id/premio_4Spinner"
            android:layout_width="match_parent"
            android:layout_weight="0.7"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">
        <TextView android:id="@+id/textCantidadP4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cantidad"
            android:layout_marginLeft="20dp"
            android:layout_weight="1.3"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/editTextCantidadP4"
            android:layout_width="match_parent"
            android:layout_weight="0.7"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginRight="10dp"
            android:inputType="number"/>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:weightSum="2"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tipoFiltro"
            style="@style/SubtituloFiltros"
            android:text="Canjes"
            android:paddingLeft="50dp"
            android:layout_gravity="center"
            android:layout_weight="1.5"
            android:textSize="40dp" />

        <Button
            android:id="@+id/btnGuardarCanje"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector_btn_guardar"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:weightSum="2"
        android:orientation="horizontal">
        <TextView android:id="@+id/textCategoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Categoria"
            android:layout_weight="1.3"
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:textStyle="bold" />
        <Spinner android:id="@+id/categoriaSpinner"
            android:layout_width="match_parent"
            android:layout_weight="0.7"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:weightSum="2"
        android:orientation="horizontal">
        <TextView android:id="@+id/textMarca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Marca"
            android:layout_marginLeft="20dp"
            android:layout_weight="1.3"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:textStyle="bold" />
        <Spinner android:id="@+id/marcaSpinner"
            android:layout_width="match_parent"
            android:layout_weight="0.7"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:weightSum="2"
        android:orientation="horizontal">
        <TextView android:id="@+id/textPresentacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PresentaciÃ³n"
            android:layout_marginLeft="20dp"
            android:layout_weight="1.3"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:textStyle="bold" />
        <Spinner android:id="@+id/presentacionSpinner"
            android:layout_width="match_parent"
            android:layout_weight="0.7"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:weightSum="2"
        android:orientation="horizontal">
        <TextView android:id="@+id/textCantidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cantidad"
            android:layout_marginLeft="20dp"
            android:layout_weight="1.3"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/editTextCantidad"
            android:layout_width="match_parent"
            android:layout_weight="0.7"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginRight="10dp"
            android:inputType="number"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:weightSum="2"
        android:orientation="horizontal">
        <TextView android:id="@+id/textPrecio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Precio"
            android:layout_marginLeft="20dp"
            android:layout_weight="1.3"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/editTextPrecio"
            android:layout_width="match_parent"
            android:layout_weight="0.7"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginRight="10dp"
            android:inputType="numberDecimal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:weightSum="2"
        android:orientation="horizontal">
        <TextView android:id="@+id/textPremio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Premio"
            android:layout_marginLeft="20dp"
            android:layout_weight="1.3"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btnPremio"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:background="@drawable/selector_btn_agregar"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="10dp"
            />
    </LinearLayout>

</LinearLayout>